rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create and manage their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User-specific settings, only the user can read/write their own document.
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Project codes can be read by any authenticated user and written by their owner.
    match /projectCodes/{docId} {
      allow list: if request.auth != null;
      allow get: if request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Task codes can be read by any authenticated user and written by their owner.
    match /taskCodes/{docId} {
      allow list: if request.auth != null;
      allow get: if request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Generation history can be listed by any authenticated user (queries will filter)
    // and individual documents can only be retrieved or written by their owner.
    match /generationHistory/{docId} {
      allow list: if request.auth != null;
      allow get: if request.auth.uid == resource.data.userId;
      allow write: if request.auth.uid == request.resource.data.userId;
    }
  }
}
