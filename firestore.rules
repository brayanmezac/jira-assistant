
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write only their own settings document.
    // The document ID must match the user's UID.
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read the global project codes.
    // Allow any authenticated user to create, update, or delete project codes.
    match /projectCodes/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow any authenticated user to read the global task codes.
    // Allow any authenticated user to create, update, or delete task codes.
    match /taskCodes/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Disallow access to any other collections by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
