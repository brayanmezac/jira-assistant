
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User-specific settings, only the user can read/write their own document.
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Project codes are public to read, but only authenticated users can modify them.
    match /projectCodes/{docId} {
      allow read;
      allow write: if request.auth != null;
    }

    // Task codes are public to read, but only authenticated users can modify them.
    match /taskCodes/{docId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
